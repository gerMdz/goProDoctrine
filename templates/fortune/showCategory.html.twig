{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-md-offset-2">
                <table class="table table-bordered">
                    <thead class="header-bkgrnd">
                        <tr>
                            <th>
                               <span class="fa {{ category.iconKey }}"></span> {{ catFortuna }}
                            </th>
                            <th>
                               Printed History ({{ muestraFortuna|number_format }} total
                                {{ avgFortuna|number_format }} promedio)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                {% for fortuneCookie in category.fortuneCookies %}
                <tr>
                    <td>
                        {{ fortuneCookie.fortune }}
                   </td>
                    <td>
                       {{ fortuneCookie.numberPrinted }} printed since {{ fortuneCookie.createdAt|date('M jS Y') }}
                   </td>
                </tr>
                {% endfor %}
                    </tbody>
                 </table>
                 <i class="fa fa-angle-double-left"></i> <a class="fortune-black" href="{{ path('homepage') }}">More Fortune</a>
            </div>
        </div>
    </div>
{% endblock %}
